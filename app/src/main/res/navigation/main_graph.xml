<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/puppiesList">

    <fragment
        android:id="@+id/puppiesList"
        android:name="com.example.androiddevchallenge.ui.PuppiesList"
        android:label="PuppiesList" >
        <action
            android:id="@+id/action_puppiesList_to_puppyDetail"
            app:destination="@id/puppyDetail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/puppyDetail"
        android:name="com.example.androiddevchallenge.ui.PuppyDetail"
        android:label="PuppyDetail" />

</navigation>